@model IEnumerable<Lab_4.Models.Pedido>

@{
    ViewBag.Title = "Index";
}

<section>
    <h3>Buscar Medicamento</h3>

    @using (Html.BeginForm("Buscar", "Med", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <input type="text" name="Buscado" />
        <input type="submit" value="Buscar" class="btn btn-primary" />
    }
</section>

<h2>Lista de Pedidos</h2>

<p>
    @Html.ActionLink("Ir a lista de Medicamentos", "Index", "Med")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MedComprados)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.total)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreCliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MedComprados)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.total)
        </td>
    </tr>
}

</table>

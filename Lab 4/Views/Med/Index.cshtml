@model IEnumerable<Lab_4.Models.Med>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Medicamentos (Solo vista)</h2>

<h3>Opciones de Pedido</h3>

<section>
    <p>
            
        @Html.ActionLink("Crear Pedido", "AgregarMed", "Pedido", FormMethod.Get) | @Html.ActionLink("Ir a lista de Pedidos", "Index", "Pedido")
    </p>
</section>

<section>
<h3>Buscar Medicamento</h3>

@using (Html.BeginForm("Buscar", "Med", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="text" name="Buscado" />
    <input type="submit" value="Buscar" class="btn btn-primary" />
}
</section>

<section>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Casa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Existencia)
            </th>
            <th>
                <p>Opciones</p>
            </th>
            <th></th>
        </tr>


        @if (Model == null)
        {
        <p> Lista Vacia</p>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Casa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Existencia)
                    </td>
                    <td>
                        @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                    </td>
                </tr>
            }
        }

    </table>
</section>